{
    "compilerOptions": {
        "target": "esnext",
        "module": "ESNext",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "strictNullChecks": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "baseUrl": ".",
        "lib": ["ESNext.Array", "DOM"],
        "jsx": "react",
        "jsxFactory": "h"
    },
    "include": ["src"]
}
